<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/social_colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".ui.chatUser.ChatUSerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/social_colorPrimary"
        app:title="@string/social_txt_friend_request"
        app:titleTextColor="@color/social_white"></androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_friend_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/social_colorPrimary"
        android:visibility="gone"
        app:tabIndicatorColor="@color/social_colorAccent"
        app:tabSelectedTextColor="@color/social_white"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/social_gray" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vb_friend_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_friend_request" />

