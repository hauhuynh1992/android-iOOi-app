<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/social_transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_38sdp"
        android:background="@color/social_white"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/Social_spacing_middle"
        app:cardElevation="@dimen/Social_spacing_control_half"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/Social_spacing_standard_new"
            android:paddingEnd="@dimen/Social_spacing_standard_new">

            <TextView
                android:id="@+id/tv_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_pencil"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/social_black"
                android:paddingTop="@dimen/Social_spacing_middle"
                android:paddingBottom="@dimen/Social_spacing_middle"
                android:text="@string/social_lbl_edit_name"
                android:textColor="@color/social_black"
                android:textSize="@dimen/Social_font_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/social_view_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/social_ic_camera"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingTop="@dimen/Social_spacing_middle"
                android:paddingBottom="@dimen/Social_spacing_middle"
                android:text="@string/social_lbl_edit"
                android:textColor="@color/social_black"
                android:textSize="@dimen/Social_font_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/social_view_color" />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingTop="@dimen/Social_spacing_middle"
                android:paddingBottom="@dimen/Social_spacing_middle"
                android:text="Logout"
                android:textColor="@color/social_black"
                android:textSize="@dimen/Social_font_size_medium" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
