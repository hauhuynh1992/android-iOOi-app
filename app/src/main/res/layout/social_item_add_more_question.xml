<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/btn_add_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/social_bg_circle"
            android:src="@drawable/social_ic_add"
            app:tint="@color/pd_color_white" />


        <TextView
            android:id="@+id/edt_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_toRightOf="@+id/icon"
            android:padding="@dimen/_6sdp"
            android:text="@string/pd_add_option"
            android:textColor="@color/social_colorPrimary" />

    </RelativeLayout>
</RelativeLayout>