<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/bg_select_user"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUser"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/social_ic_user2"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/cardRemove"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/bg_blue_cirle">

                <ImageView
                    android:id="@+id/imgRemove"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cancel"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toRightOf="@+id/ll_cart"
            android:ellipsize="end"
            android:maxWidth="@dimen/_70sdp"
            android:maxLines="1"
            android:text="HUynh Psdfasdfasdfa adfassdfasfdfhi Hau"
            android:textAppearance="@style/SocialFontMedium"
            android:textColor="@color/social_textColorPrimary"
            android:textSize="@dimen/_8sdp" />
    </RelativeLayout>
</RelativeLayout>