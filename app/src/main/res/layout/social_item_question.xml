<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            app:tint="@color/social_textColorSecondary" />


        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_cancel_black" />

        <EditText
            android:id="@+id/edt_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_toLeftOf="@+id/img_delete"
            android:layout_toRightOf="@+id/icon"
            android:background="@color/pd_transparent"
            android:hint="@string/pd_title_option"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/social_black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rlMain"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/Social_spacing_middle"
        android:layout_marginBottom="@dimen/Social_spacing_standard"
        android:background="@color/social_view_color" />
</RelativeLayout>