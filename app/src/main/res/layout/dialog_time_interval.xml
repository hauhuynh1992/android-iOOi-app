<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_16sdp">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/svRadio"
        android:layout_marginTop="@dimen/_16sdp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/icon"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_chat_cirle"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_stopwatch" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/icon"
            android:text="Disappearing Messages"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/bg_button_gray"
        android:padding="@dimen/_16sdp">

        <RadioButton
            android:id="@+id/rabOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Off"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab5s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="5 seconds"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab10s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="10 seconds"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab30s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="30 seconds"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab1m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="1 minute"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab5m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawablePadding="@dimen/_5sdp"
            android:text="5 minutes"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab10m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="10 minutes"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab15m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="15 minutes"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab30m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="30 minutes"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab1h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="1 hour"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab6h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="6 hours"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab12h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="12 hours"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rab1d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:text="1 day"
            android:textSize="12sp" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/bg_button_black"
        android:gravity="center"
        android:text="Ok"
        android:textAlignment="center"
        android:textColor="@color/social_white"
        android:textSize="16sp" />

</LinearLayout>
