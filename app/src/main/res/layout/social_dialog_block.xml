<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/Social_spacing_standard_new"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/Social_spacing_standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/Social_spacing_standard_new">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unfriend"
            android:textAppearance="@style/SocialFontBold"
            android:textColor="@color/social_colorPrimary"
            android:textSize="@dimen/Social_font_size_xlarge" />

        <TextView
            android:id="@+id/tvMessage"
            style="@style/SocialSubTitle"
            android:layout_marginTop="@dimen/Social_spacing_standard"
            android:singleLine="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Social_spacing_standard_new"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginEnd="@dimen/Social_spacing_standard"
                android:background="@drawable/social_bg_circle"
                android:backgroundTint="@color/social_colorPrimaryDark"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/social_ic_close"
                app:tint="@color/social_textColorPrimary" />

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/dialog_bg"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/social_ic_check"
                app:tint="@color/social_black" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>